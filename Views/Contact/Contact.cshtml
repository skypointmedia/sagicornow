@model SagicorNow.Models.ContactModel

@{
    ViewBag.Title = "Sagicor Life Insurance";
    Layout = "~/Views/Shared/_Static.cshtml";
}


<div class="container">
    <section class="heading text-center">
        @if (Model == null)
        {
            <h1>Contact Us</h1>
            <h2>Please complete the contact form and we'll be in touch.</h2>
        }
        else
        {
            <h1>We're Sorry.</h1>

            <h2>We are unable to issue coverage online at this time.</h2>
        }
    </section>

    <section id="contact" class="push60">
        @using (Html.BeginForm("SendEmail", "Contact", FormMethod.Post, new { id = "contactform", name = "contactform" }))
        {
            <div class="sub-container">
                <div class="row">
                    <div class="col-lg-6">
                        <p style="padding-left:15px;">@Html.Raw(Model == null ? "" : Model.denialMessage)</p>
                        <p style="padding-left:15px;">
                            Please complete the contact form on this page and a Sagicor Life agent will contact you at your convenience. You can also call 888-472-4426.
                        </p>

                    </div>
                    <div class="col-lg-6">

                        <div class="form-group">
                            @Html.Hidden("state", (Model == null ? "" : Model.state))
                            @Html.Hidden("denialMessage", (Model == null ? "" : Model.denialMessage))

                            <label for="firstname" class="col-lg-12 col-form-label">First Name</label>
                            <div class="col-lg-12">
                                @Html.TextBoxFor(x => x.firstName, "", new { @class = "form-control", maxlength = "20" })
                                @*<input type="text" class="form-control" id="firstname" name="firstname" maxlength="30">*@
                            </div>
                            <div class="form-control-feedback"></div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="col-lg-12 col-form-label">Email</label>
                            <div class="col-lg-12">
                                @Html.TextBoxFor(x => x.email, "", new { @class = "form-control", maxlength = "50" })
                                @*<input type="text" class="form-control" id="email" name="email" maxlength="50">*@
                            </div>
                            <div class="form-control-feedback"></div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="col-lg-12 col-form-label">Phone</label>
                            <div class="col-lg-12">
                                @Html.TextBoxFor(x => x.phone, "", new { @class = "form-control", placeholder = "___-___-____" })
                                @*<input type="text" class="form-control" id="phone" name="phone" placeholder="___-___-____">*@
                            </div>
                            <div class="form-control-feedback"></div>
                        </div>
                        <div class="form-group text-right">
                            <div class="col-lg-6">

                            </div>
                            <div class="col-lg-6">
                                <span style="margin-right:50px;color:red;">@TempData["ContactSendEmailMessage"]</span><button type="submit" class="btn calculate-btn">Submit</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </section>
</div>